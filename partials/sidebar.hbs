<header class="main-header">
    <div class="main-header-content">
            <h1 class="page-title hidden">{{@blog.title}}</h1>
            {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" width="200" height="200"/></a>{{/if}}
            <h2 class="page-description">{{@blog.description}}</h2>

    </div>
    <nav class="main-nav">
        <ul>
            <li class="nav-item">
            <a href="/"><h2>Work</h2></a>
            <div id="filters" class="button-group" data-tags="{{#foreach posts}}{{#foreach tags}}{{name}} {{/foreach}}{{/foreach}}">
                <button type="button" data-filter="*">Show All</button>
            </div>
            </li>
        </ul>
        <section class="share">
            <a class="icon-twitter" href="https://twitter.com/share?text={{encode @blog.title}}&amp;url={{@blog.url}}"
                onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                <span class="hidden">Twitter</span>
            </a>
            &nbsp;
            <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{@blog.url}}"
                onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                <span class="hidden">Facebook</span>
            </a>
            &nbsp;
            <a class="icon-google-plus" href="https://plus.google.com/share?url={{@blog.url}}"
               onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                <span class="hidden">Google+</span>
            </a>
        </section>
    </nav>
</header>